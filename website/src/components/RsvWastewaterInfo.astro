---
import type { SequenceType } from '@genspectrum/dashboard-components/util';

import { type RSVType } from '../types/wastewaterConfig';

interface Props {
    reference: RSVType;
    sequenceType: SequenceType;
}

const { reference, sequenceType } = Astro.props;

/* eslint-disable @typescript-eslint/naming-convention */
const additionalInfo: Record<RSVType, { referenceSequence: string }> = {
    'RSV-A': {
        referenceSequence: 'EPI_ISL_412866 (hRSV/A/England/397/2017)',
    },
    'RSV-B': {
        referenceSequence: 'EPI_ISL_1653999 (hRSV/B/Australia/VIC-RCH056/2019)',
    },
};
/* eslint-enable @typescript-eslint/naming-convention */

const info = additionalInfo[reference];
---

<span>
    Mutations are provided in terms of
    {sequenceType === 'amino acid' ? 'amino acid' : 'nucleotide'} substitutions (minimum read depth 30x) of the {
        reference
    } subtype relative to the reference {info.referenceSequence}.
</span>
