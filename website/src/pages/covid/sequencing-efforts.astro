---
import { chooseGranularityBasedOnDateRange } from '../../routes/helpers';
import BaseLayout from '../../layouts/base/BaseLayout.astro';
import LocationTimeFilter from '../../components/LocationTimeFilter.astro';
import { CovidView3 } from '../../routes/covid';
import { getLapisUrl } from '../../config';
import { defaultTablePageSize, Organisms } from '../../routes/View';

const routeData = CovidView3.parseUrl(Astro.url);

const baselineFilter = CovidView3.toLapisFilter(routeData);

const timeGranularity = chooseGranularityBasedOnDateRange({ from: baselineFilter.dateFrom, to: baselineFilter.dateTo });
let subDivisionField = undefined;
let subDivisionLabel = '';
if (routeData.baselineFilter.location.country === undefined) {
    subDivisionField = 'country';
    subDivisionLabel = 'Countries';
} else if (routeData.baselineFilter.location.division === undefined) {
    subDivisionField = 'division';
    subDivisionLabel = 'Geographic sub-divisions';
}
---

<style>
    .component-title {
        @apply font-bold;
    }
</style>

<BaseLayout title='Sequencing Efforts | SARS-CoV-2 | GenSpectrum'>
    <gs-app lapis={getLapisUrl(Organisms.covid)}>
        <div class='mb-4 flex items-center justify-center bg-blue-50 px-2 py-1'>
            <div class='mr-2 font-semibold'>Filter dataset:</div>
            <div class='max-w-[1000px]'>
                <LocationTimeFilter
                    fields={CovidView3.view.locationFields}
                    initialLocation={baselineFilter}
                    initialDateRange={routeData.baselineFilter.dateRange}
                    earliestDate={CovidView3.view.earliestDate}
                    customDateRangeOptions={CovidView3.view.customDateRangeOptions}
                />
            </div>
        </div>

        <div class='grid grid-cols-[repeat(auto-fit,minmax(min(100vw,650px),1fr))] gap-x-4 gap-y-6 p-2'>
            <div>
                <h2 class='component-title'>Number sequences</h2>
                <div class='h-[600px]'>
                    <gs-number-sequences-over-time
                        lapisFilter={JSON.stringify({
                            displayName: '',
                            lapisFilter: baselineFilter,
                        })}
                        lapisDateField='date'
                        views='["bar", "line", "table"]'
                        pageSize={defaultTablePageSize}
                        width='100%'
                        height='100%'
                        granularity={timeGranularity}></gs-number-sequences-over-time>
                </div>
            </div>
            {
                subDivisionField && (
                    <div>
                        <h2 class='component-title'>{subDivisionLabel}</h2>
                        <div class='h-[600px]'>
                            <gs-aggregate
                                fields={JSON.stringify([subDivisionField])}
                                filter={JSON.stringify(baselineFilter)}
                                pageSize={defaultTablePageSize}
                                width='100%'
                                height='100%'
                            />
                        </div>
                    </div>
                )
            }
            <div>
                <h2 class='component-title'>Hosts</h2>
                <div class='h-[600px]'>
                    <gs-aggregate
                        fields='["host"]'
                        filter={JSON.stringify(baselineFilter)}
                        pageSize={defaultTablePageSize}
                        width='100%'
                        height='100%'></gs-aggregate>
                </div>
            </div>
            <div>
                <h2 class='component-title'>Originating lab</h2>
                <div class='h-[600px]'>
                    <gs-aggregate
                        fields='["originatingLab"]'
                        filter={JSON.stringify(baselineFilter)}
                        pageSize={defaultTablePageSize}
                        width='100%'
                        height='100%'></gs-aggregate>
                </div>
            </div>
            <div>
                <h2 class='component-title'>Submitting lab</h2>
                <div class='h-[600px]'>
                    <gs-aggregate
                        fields='["submittingLab"]'
                        filter={JSON.stringify(baselineFilter)}
                        pageSize={defaultTablePageSize}
                        width='100%'
                        height='100%'></gs-aggregate>
                </div>
            </div>
        </div>
    </gs-app>
</BaseLayout>
