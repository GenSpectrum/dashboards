---
import { defaultBreadcrumbs } from '../../layouts/Breadcrumbs';
import OrganismPageLayout from '../../layouts/OrganismPage/OrganismPageLayout.astro';
import { dataOrigins } from '../../types/dataOrigins';
import { wastewaterConfig } from '../../types/wastewaterConfig';

const lapisUrl = `${wastewaterConfig.lapisBaseUrl}/rsv`;
---

<OrganismPageLayout
    title='Swiss wastewater - RSV'
    breadcrumbs={[
        ...defaultBreadcrumbs,
        { name: 'Swiss wastewater' },
        {
            name: 'RSV',
            href: wastewaterConfig.pages.rsv,
        },
    ]}
    dataOrigins={[dataOrigins.wise]}
    lapisUrl={lapisUrl}
    accessionDownloadFields={[]}
    downloadLinks={[]}
>
    <div class='m-6'>
        <h1 class='text-2xl'>Swiss wastewater - RSV</h1>
        <gs-app lapis={lapisUrl}>
            {
                ['RSV-A', 'RSV-B'].map((reference) => (
                    <div class='mt-4 w-full'>
                        <h2 class='font-bold'>{reference}</h2>
                        <gs-wastewater-mutations-over-time
                            height='400px'
                            lapisFilter={JSON.stringify({
                                reference,
                                versionStatus: 'LATEST_VERSION',
                                isRevocation: false,
                            })}
                            sequenceType='nucleotide'
                        />
                    </div>
                ))
            }
        </gs-app>
    </div>
</OrganismPageLayout>
